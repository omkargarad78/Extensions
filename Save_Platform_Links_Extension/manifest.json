{
    "manifest_version": 3,
    "name": "Profile Links Manager",
    "version": "1.0",
    "description": "Store and manage your profile links for job applications.",
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}
